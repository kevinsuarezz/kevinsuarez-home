---
import '@fontsource-variable/onest';

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="bg-black">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Kevin Suarez's webpage"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative text-gray-950 dark:text-white text-lg sm:text-base">
    <slot />
    
    <style is:global>
      :root {
      }

      html {
        font-family: 'Onest Variable', sans-serif, system-ui;
        height: 100vh;
        font-size: 16px;
      }

      body {
        height: 100vh;
        margin: 0;
        padding: 0;
      }
    </style>
  </body>
</html>